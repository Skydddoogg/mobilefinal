<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:padding="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_hello_message"
            android:textSize="25dp"
            android:text="Hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/home_hello_message"
            android:id="@+id/home_quote_message"
            android:text="this is my quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_quote_message"
            android:id="@+id/home_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>